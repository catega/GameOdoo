<odoo>
    <data>
        <!-- explicit list view definition -->

        <!-- TREE -->
        <!-- Player tree -->
        <record model="ir.ui.view" id="game.player_list">
            <field name="name">Players</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="image_small" widget="image"/>
                    <field name="name"/>
                    <field name="race"/>
                    <field name="level"/>
                    <field name="points"/>
                </tree>
            </field>
        </record>

        <!-- Region tree -->
        <record model="ir.ui.view" id="game.region_list">
            <field name="name">Regions</field>
            <field name="model">game.region</field>
            <field name="arch" type="xml">
                <tree decoration-warning="gold_production>200">
                    <field name="name"/>
                    <field name="leader"/>
                    <field name="mines"/>
                    <field name="forests"/>
                    <field name="villages"/>
                    <field name="cities"/>
                    <field name="iron_production"/>
                    <field name="wood_production"/>
                    <field name="food_production"/>
                    <field name="gold_production"/>
                    <field name="pos_x"/>
                    <field name="pos_y"/>
                </tree>
            </field>
        </record>

        <!-- Travel tree -->
        <record model="ir.ui.view" id="game.travel_list">
            <field name="name">Travels</field>
            <field name="model">game.travel</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="launch_time"/>
                    <field name="travel_duration"/>
                </tree>
            </field>
        </record>


        <!-- FORM -->
        <!-- Player form -->
        <record model="ir.ui.view" id="game.player_changes_graph">
            <field name="name">Player battles graph</field>
            <field name="model">game.player_changes</field>
            <field name="arch" type="xml">
                <graph string="Player battles percent" type="line">
                    <field name="name" type="row"/>
                    <field name="time" type="col"/>
                    <field name="percent" type="measure"/>
                </graph>
            </field>
        </record>

        <act_window id="game.launch_player_changes_graph"
                    name="Launch Player Changes graph"
                    res_model="game.player_changes"
                    view_mode="graph"
                    target="new"
                    domain="[('player','=',active_id)]"/>

        <!-- Wizard character -->
        <act_window id="game.launch_character_wizard"
                name="Crear Character"
                binding_model="res.partner"
                res_model="game.wizard_character"
                view_mode="form"
                target="new"/>
        <!--
        <act_window
                id="game.add_character"
                name="Add character"
                res_model="game.character"
                view_mode="form"
                target="new"
                domain="[('character','=',active_id)]"
        />
        -->

        <record model="ir.ui.view" id="game.player_form">
            <field name="name">Players</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form string="Player form">
                    <header>
                        <field name="battle_status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <field name="photo" widget="image"/>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="description"/>
                                <field name="race"/>
                            </group>
                            <group>
                                <field name="level"/>
                                <field name="points"/>
                                <field name="won_battles"/>
                                <field name="lost_battles"/>
                                <field name="clan"/>
                            </group>
                            <group>
                                <field name="is_player"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Regions">
                                <field name="regions"/>
                            </page>
                            <page string="Enemy regions">
                                <field name="enemy_regions"/>
                            </page>
                            <page string="Characters">
                                <field name="characters" context="{'default_player_leader': active_id}">
                                    <kanban>
                                        <!--list of field to be loaded -->
                                        <field name="name"/>
                                        <field name="id"/>
                                        <field name="region"/>
                                        <field name='level'/>

                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_product_vignette">
                                                    <div class="oe_product_desc">
                                                        <h4>
                                                            <a type="edit">
                                                                <field name="name"/>
                                                            </a>
                                                        </h4>
                                                        <p>
                                                            <b>Level:</b>
                                                            <field name="level"/>
                                                            <br/>
                                                            <field name="region"/>
                                                        </p>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                                <button name="%(game.launch_character_wizard)d" type="action" string="Add character" icon="fa-bolt"
                                        context="{'default_player_leader':active_id}"></button>
                            </page>
                            <page string="Active Travels">
                                <field name="active_travels"/><!--context="{'default_player': active_id}"-->
                                <!-- Cambiar lo del context o crear battles-->
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button name="%(game.launch_player_changes_graph)d" type="action" string="Show Graph"
                                        class="oe_highlight"></button>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Player inherit form -->
        <record model="ir.ui.view" id="game.player_inherit_form">
            <field name="name">Players</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form string="Player form">
                    <header>
                        <field name="battle_status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <field name="photo" widget="image"/>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="description"/>
                                <field name="race"/>
                            </group>
                            <group>
                                <field name="level"/>
                                <field name="points"/>
                                <field name="won_battles"/>
                                <field name="lost_battles"/>
                                <field name="clan"/>
                            </group>
                            <group>
                                <field name="is_player"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Regions">
                                <field name="regions"/>
                            </page>
                            <page string="Enemy regions">
                                <field name="enemy_regions"/>
                            </page>
                            <page string="Characters">
                                <field name="characters" context="{'default_player_leader': active_id}">
                                    <kanban>
                                        <!--list of field to be loaded -->
                                        <field name="name"/>
                                        <field name="id"/>
                                        <field name="region"/>
                                        <field name='level'/>

                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_product_vignette">
                                                    <div class="oe_product_desc">
                                                        <h4>
                                                            <a type="edit">
                                                                <field name="name"/>
                                                            </a>
                                                        </h4>
                                                        <p>
                                                            <b>Level:</b>
                                                            <field name="level"/>
                                                            <br/>
                                                            <field name="region"/>
                                                        </p>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                                <button name="%(game.launch_character_wizard)d" type="action" string="Add character" icon="fa-bolt"
                                        context="{'default_player_leader':active_id}"></button>
                            </page>
                            <page string="Active Travels">
                                <field name="active_travels"/><!--context="{'default_player': active_id}"-->
                                <!-- Cambiar lo del context o crear battles-->
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button name="%(game.launch_player_changes_graph)d" type="action" string="Show Graph"
                                        class="oe_highlight"></button>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Wizard -->

        <record model="ir.ui.view" id="game.wizard_character_form">
            <field name="name">character wizard Form</field>
            <field name="model">game.wizard_character</field>
            <field name="arch" type="xml">
                <form string="character">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group states="global" string="Global">
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="player_leader"/>
                                <field name="region"/>
                            </group>
                        </group>
                        <group states="skills" string="Skills">
                            <field name="mining_level"/>
                            <field name="hunting_level"/>
                            <field name="gathering_level"/>
                            <footer>
                                <button states="global" name="next" type="object"
                                        string="Next" class="oe_highlight"/>
                                <button states="skills" name="previous" type="object"
                                    string="Previous" class="oe_highlight"/>
                                <button states="skills" name="crear_character" type="object"
                                    string="Create" class="oe_highlight"/>
                            </footer>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Character form -->
        <record model="ir.ui.view" id="game.character_form">
            <field name="name">Characters</field>
            <field name="model">game.character</field>
            <field name="arch" type="xml">
                <form string="Character form">
                    <sheet>
                        <field name="name"/>
                        <group>
                            <group>
                                <separator string="General info"/>
                                <field name="level"/>
                                <field name="player_leader"/>
                                <field name="region"/>
                            </group>
                            <group>
                                <separator string="Skill levels"/>
                                <field name="mining_level"/>
                                <field name="hunting_level"/>
                                <field name="gathering_level"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Clan form -->
        <record model="ir.ui.view" id="game.clan_form">
            <field name="name">Clans</field>
            <field name="model">game.clan</field>
            <field name="arch" type="xml">
                <form string="Clan form">
                    <sheet>
                        <field name="name"/>
                        <group>
                            <field name="level"/>
                        </group>
                        <notebook>
                            <page string="Members">
                                <field name="members">
                                    <kanban>
                                        <!--list of field to be loaded -->
                                        <field name="name"/>
                                        <field name="id"/>
                                        <field name='level'/>
                                        <field name='points'/>
                                        <field name='photo'/>

                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_product_vignette">
                                                    <div class="o_kanban_image">
                                                        <a type="open">
                                                            <img class="o_image_64_contain"
                                                                 t-att-alt="record.name.value"
                                                                 t-att-src="kanban_image('res.partner', 'photo', record.id.raw_value)"/>
                                                        </a>
                                                    </div>
                                                    <div class="oe_product_desc">
                                                        <h4>
                                                            <a type="edit">
                                                                <field name="name"/>
                                                            </a>
                                                        </h4>
                                                        <p>
                                                            <b>Level:</b>
                                                            <field name="level"/>
                                                            <br/>
                                                            <b>Points:</b>
                                                            <field name="points"/>
                                                        </p>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>
                            <page string="Alliances">
                                <field name="alliances"/>
                            </page>
                            <!--<page string="Regions">
                                <field name="regions"/>
                            </page>-->
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Region form -->
        <record model="ir.ui.view" id="game.region_form">
            <field name="name">Regions</field>
            <field name="model">game.region</field>
            <field name="arch" type="xml">
                <form string="Region form">
                    <sheet>
                        <group>
                            <group>
                                <separator string="General info"/>
                                <field name="name"/>
                                <field name="leader"/>
                                <field name="leader_clan"/>
                            </group>
                            <group>
                                <separator string="Fortress"/>
                                <field name="fortress_level"/>
                                <field name="max_characters"/>
                                <field name="iron"/>
                                <field name="wood"/>
                                <field name="food"/>
                                <field name="gold"/>
                            </group>
                            <group>
                                <separator string="Resource generators"/>
                                <field name="mines"/>
                                <field name="forests"/>
                                <field name="villages"/>
                                <field name="cities"/>
                            </group>
                            <group>
                                <separator string="Resources per day"/>
                                <field name="iron_production"/>
                                <field name="wood_production"/>
                                <field name="food_production"/>
                                <field name="gold_production"/>
                            </group>
                            <group>
                                <separator string="Coords"/>
                                <field name="pos_x"/>
                                <field name="pos_y"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Characters">
                                <field name="characters">
                                    <kanban>
                                        <!--list of field to be loaded -->
                                        <field name="name"/>
                                        <field name="id"/>
                                        <field name="player_leader"/>
                                        <field name='level'/>
                                        <field name='hunting_level'/>
                                        <field name='mining_level'/>
                                        <field name='gathering_level'/>

                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_product_vignette">
                                                    <div class="oe_product_desc">
                                                        <h4>
                                                            <a type="edit">
                                                                <field name="name"/>
                                                            </a>
                                                        </h4>
                                                        <p>
                                                            <b>Leader:</b>
                                                            <field name="player_leader"/>
                                                            <br/>
                                                            <b>Level:</b>
                                                            <field name="level"/>
                                                        </p>
                                                    </div>
                                                    <div class="oe_product_desc">
                                                        <p>
                                                            <b>Hunting level:</b>
                                                            <field name="hunting_level"/>
                                                            <br/>
                                                            <b>Mining level:</b>
                                                            <field name="mining_level"/>
                                                            <br/>
                                                            <b>Gathering level:</b>
                                                            <field name="gathering_level"/>
                                                        </p>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Travel form -->
        <record model="ir.ui.view" id="game.travel_form">
            <field name="name">Travels</field>
            <field name="model">game.travel</field>
            <field name="arch" type="xml">
                <form string="Travel form">
                    <sheet>
                        <field name="name"/>
                        <group>
                            <group>
                                <separator string="Players"/>
                                <field name="player"/>
                                <field name="player2"/>
                            </group>
                            <group>
                                <separator string="Regions"/>
                                <field name="origin_region"/>
                                <field name="destiny_region"/>
                            </group>
                            <group>
                                <separator string="Time info"/>
                                <field name="launch_time"/>
                                <field name="battle_time"/>
                                <field name="travel_duration"/>
                            </group>
                            <group>
                                <separator string="Time remaining percent"/>
                                <field name="time_remaining" widget="percentpie"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="game.travel_calendar">
            <field name="name">Travel Calendar</field>
            <field name="model">game.travel</field>
            <field name="arch" type="xml">
                <calendar string="Travel Calendar" date_start="launch_time" date_stop="battle_time" color="player">
                    <field name="name"/>
                </calendar>
            </field>
        </record>

        <!-- Alliance form -->
        <record model="ir.ui.view" id="game.alliance_form">
            <field name="name">Alliances</field>
            <field name="model">game.alliance</field>
            <field name="arch" type="xml">
                <form string="Alliance form">
                    <sheet>
                        <field name="name"/>
                        <group>
                            <field name="clans"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- KANBAN -->
        <!-- Player Kanbam -->
        <record model="ir.ui.view" id="game.player_kanban">
            <field name="name">Players</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <kanban>
                    <!--list of field to be loaded -->
                    <field name="name"/>
                    <field name="id"/>
                    <field name='level'/>
                    <field name='points'/>
                    <field name='photo'/>
                    <field name='clan'/>

                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_product_vignette">
                                <div class="o_kanban_image">
                                    <a type="open">
                                        <img class="o_image_64_contain"
                                             t-att-alt="record.name.value"
                                             t-att-src="kanban_image('res.partner', 'photo', record.id.raw_value)"/>
                                    </a>
                                </div>
                                <div class="oe_product_desc">
                                    <h4>
                                        <a type="edit">
                                            <field name="name"/>
                                        </a>
                                    </h4>
                                    <p>
                                        <b>Level:</b>
                                        <field name="level"/>
                                        <br/>
                                        <b>Points:</b>
                                        <field name="points"/>
                                        <br/>
                                        <b>Clan:</b>
                                        <field name='clan'/>
                                    </p>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Character Kanbam -->
        <record model="ir.ui.view" id="game.character_kanban">
            <field name="name">Characters</field>
            <field name="model">game.character</field>
            <field name="arch" type="xml">
                <kanban>
                    <!--list of field to be loaded -->
                    <field name="name"/>
                    <field name='level'/>
                    <field name='player_leader'/>
                    <field name='region'/>
                    <field name='mining_level'/>
                    <field name='hunting_level'/>
                    <field name='gathering_level'/>

                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_product_vignette">
                                <div class="oe_product_desc">
                                    <h4>
                                        <a type="edit">
                                            <field name="name"/>
                                        </a>
                                    </h4>
                                    <p>
                                        <b>Level:</b>
                                        <field name="level"/>
                                        <br/>
                                        <b>Leader:</b>
                                        <field name="player_leader"/>
                                        <br/>
                                        <b>Region:</b>
                                        <field name='region'/>
                                    </p>
                                    <p>
                                        <b>Mining level:</b>
                                        <field name="mining_level"/>
                                        <br/>
                                        <b>Hunting level:</b>
                                        <field name="hunting_level"/>
                                        <br/>
                                        <b>Gathering level:</b>
                                        <field name='gathering_level'/>
                                    </p>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- SEARCH -->
        <!-- Player search -->
        <record model="ir.ui.view" id="game.player_search">
            <field name="name">Player search</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="race"/>
                    <field name="level"/>
                    <filter name="level" string="High level" domain="[('level', '>=', '50')]"/>
                    <field name="points"/>
                    <field name="clan"/>
                    <filter name="group_by_clan" string="Group by clan" context="{'group_by' : 'clan'}"/>
                    <filter name="player_partner" string="Is Player" domain="[('is_player','=',True)]" />
                </search>
            </field>
        </record>

        <!-- Character search -->
        <record model="ir.ui.view" id="game.character_search">
            <field name="name">Character search</field>
            <field name="model">game.character</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="level"/>
                    <filter name="group_by_player" string="Group by player" context="{'group_by' : 'player_leader'}"/>
                    <filter name="group_by_region" string="Group by region" context="{'group_by' : 'region'}"/>
                </search>
            </field>
        </record>

        <!-- Region search -->
        <record model="ir.ui.view" id="game.region_search">
            <field name="name">Region search</field>
            <field name="model">game.region</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="leader"/>
                    <filter name="cities" string="Rich regions" domain="[('cities', '>=', '2')]"/>
                    <filter name="group_by_player" string="Group by player" context="{'group_by' : 'leader'}"/>
                </search>
            </field>
        </record>

        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="game.player_action_window">
            <field name="name">Players</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{'default_is_player': True, 'search_default_player_partner': 1}</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('game.player_list')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('game.player_form')}),]"/>
        </record>
        <record model="ir.actions.act_window" id="game.clan_action_window">
            <field name="name">Clans</field>
            <field name="res_model">game.clan</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.actions.act_window" id="game.character_action_window">
            <field name="name">Characters</field>
            <field name="res_model">game.character</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>
        <record model="ir.actions.act_window" id="game.region_action_window">
            <field name="name">Regions</field>
            <field name="res_model">game.region</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.actions.act_window" id="game.travel_action_window">
            <field name="name">Travels</field>
            <field name="res_model">game.travel</field>
            <field name="view_mode">tree,form,calendar</field>
        </record>
        <record model="ir.actions.act_window" id="game.p_changes_action_window">
            <field name="name">Player changes</field>
            <field name="res_model">game.player_changes</field>
            <field name="view_mode">tree,form,graph</field>
        </record>
        <record model="ir.actions.act_window" id="game.alliance_action_window">
            <field name="name">Alliances</field>
            <field name="res_model">game.alliance</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- server action to the one above -->
        <!--
            <record model="ir.actions.server" id="game.action_server">
              <field name="name">game server</field>
              <field name="model_id" ref="model_game_game"/>
              <field name="state">code</field>
              <field name="code">
                action = {
                  "type": "ir.actions.act_window",
                  "view_mode": "tree,form",
                  "res_model": model._name,
                }
              </field>
            </record>
        -->

        <!-- Top menu item -->

        <menuitem name="Game" id="game.menu_root"/>

        <!-- menu categories -->

        <menuitem name="Game" id="game.menu_1" parent="game.menu_root"/>
        <menuitem name="Aux" id="game.menu_2" parent="game.menu_root"/>

        <!-- actions -->

        <menuitem name="Players" id="game.menu_1_player" parent="game.menu_1"
                  action="game.player_action_window"/>
        <menuitem name="Clans" id="game.menu_1_clan" parent="game.menu_1"
                  action="game.clan_action_window"/>
        <menuitem name="Characters" id="game.menu_1_character" parent="game.menu_1"
                  action="game.character_action_window"/>
