<odoo>
    <data>
        <!-- explicit list view definition -->

        <!-- TREE -->
        <!-- Player tree -->
        <record model="ir.ui.view" id="game.player_list">
            <field name="name">Players</field>
            <field name="model">game.player</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="race"/>
                    <field name="level"/>
                    <field name="points"/>
                </tree>
            </field>
        </record>

        <!-- Region tree -->
        <record model="ir.ui.view" id="game.region_list">
            <field name="name">Regions</field>
            <field name="model">game.region</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="leader"/>
                </tree>
            </field>
        </record>

        <!-- FORM -->
        <!-- Player form -->
        <record model="ir.ui.view" id="game.player_form">
            <field name="name">Players</field>
            <field name="model">game.player</field>
            <field name="arch" type="xml">
                <form string="Player form">
                    <sheet>
                        <field name="photo" widget="image"/>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="race"/>
                                <field name="level"/>
                                <field name="points"/>
                                <field name="clan"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Regions">
                                <field name="regions"/>
                            </page>
                            <page string="Characters">
                                <field name="characters">
                                    <kanban>
                                        <!--list of field to be loaded -->
                                        <field name="name"/>
                                        <field name="id"/>
                                        <field name="region"/>
                                        <field name='level'/>

                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_product_vignette">
                                                    <div class="oe_product_desc">
                                                        <h4>
                                                            <a type="edit">
                                                                <field name="name"/>
                                                            </a>
                                                        </h4>
                                                        <p>
                                                            <b>Level:</b>
                                                            <field name="level"/>
                                                            <br/>
                                                            <field name="region"/>
                                                        </p>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Character form -->
        <record model="ir.ui.view" id="game.character_form">
            <field name="name">Characters</field>
            <field name="model">game.character</field>
            <field name="arch" type="xml">
                <form string="Character form">
                    <sheet>
                        <field name="name"/>
                        <group>
                            <group>
                                <separator string="General info"/>
                                <field name="level"/>
                                <field name="player_leader"/>
                                <field name="region"/>
                            </group>
                            <group>
                                <separator string="Skill levels"/>
                                <field name="mining_level"/>
                                <field name="hunting_level"/>
                                <field name="gathering_level"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Clan form -->
        <record model="ir.ui.view" id="game.clan_form">
            <field name="name">Clans</field>
            <field name="model">game.clan</field>
            <field name="arch" type="xml">
                <form string="Clan form">
                    <sheet>
                        <field name="name"/>
                        <group>
                            <field name="level"/>
                        </group>
                        <notebook>
                            <page string="Members">
                                <field name="members">
                                    <kanban>
                                        <!--list of field to be loaded -->
                                        <field name="name"/>
                                        <field name="id"/>
                                        <field name='level'/>
                                        <field name='points'/>
                                        <field name='photo'/>

                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_product_vignette">
                                                    <div class="o_kanban_image">
                                                        <a type="open">
                                                            <img class="o_image_64_contain"
                                                                 t-att-alt="record.name.value"
                                                                 t-att-src="kanban_image('game.player', 'photo', record.id.raw_value)"/>
                                                        </a>
                                                    </div>
                                                    <div class="oe_product_desc">
                                                        <h4>
                                                            <a type="edit">
                                                                <field name="name"/>
                                                            </a>
                                                        </h4>
                                                        <p>
                                                            <b>Level:</b>
                                                            <field name="level"/>
                                                            <br/>
                                                            <b>Points:</b>
                                                            <field name="points"/>
                                                        </p>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>
                            <page string="Regions">
                                <field name="regions"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Region form -->
        <record model="ir.ui.view" id="game.region_form">
            <field name="name">Regions</field>
            <field name="model">game.region</field>
            <field name="arch" type="xml">
                <form string="Region form">
                    <sheet>
                        <field name="name"/>
                        <group>
                            <field name="leader"/>
                            <field name="fortress_level"/>
                            <field name="max_characters"/>
                            <field name="leader_clan"/>
                        </group>
                        <notebook>
                            <page string="Characters">
                                <field name="characters">
                                    <kanban>
                                        <!--list of field to be loaded -->
                                        <field name="name"/>
                                        <field name="id"/>
                                        <field name="player_leader"/>
                                        <field name='level'/>
                                        <field name='hunting_level'/>
                                        <field name='mining_level'/>
                                        <field name='gathering_level'/>

                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_product_vignette">
                                                    <div class="oe_product_desc">
                                                        <h4>
                                                            <a type="edit">
                                                                <field name="name"/>
                                                            </a>
                                                        </h4>
                                                        <p>
                                                            <b>Leader:</b>
                                                            <field name="player_leader"/>
                                                            <br/>
                                                            <b>Level:</b>
                                                            <field name="level"/>
                                                        </p>
                                                    </div>
                                                    <div class="oe_product_desc">
                                                        <p>
                                                            <b>Hunting level:</b>
                                                            <field name="hunting_level"/>
                                                            <br/>
                                                            <b>Mining level:</b>
                                                            <field name="mining_level"/>
                                                            <br/>
                                                            <b>Gathering level:</b>
                                                            <field name="gathering_level"/>
                                                        </p>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- SEARCH -->
        <!-- Player search -->
        <record model="ir.ui.view" id="game.player_search">
            <field name="name">Player search</field>
            <field name="model">game.player</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="race"/>
                    <field name="level"/>
                    <filter name="level" string="High level" domain="[('level', '>=', '50')]"/>
                    <field name="points"/>
                    <field name="clan"/>
                    <filter name="group_by_clan" string="Group by clan" context="{'group_by' : 'clan'}"/>
                </search>
            </field>
        </record>

        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="game.player_action_window">
            <field name="name">Players</field>
            <field name="res_model">game.player</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.actions.act_window" id="game.clan_action_window">
            <field name="name">Clans</field>
            <field name="res_model">game.clan</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.actions.act_window" id="game.character_action_window">
            <field name="name">Characters</field>
            <field name="res_model">game.character</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>
        <record model="ir.actions.act_window" id="game.region_action_window">
            <field name="name">Regions</field>
            <field name="res_model">game.region</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- server action to the one above -->
        <!--
            <record model="ir.actions.server" id="game.action_server">
              <field name="name">game server</field>
              <field name="model_id" ref="model_game_game"/>
              <field name="state">code</field>
              <field name="code">
                action = {
                  "type": "ir.actions.act_window",
                  "view_mode": "tree,form",
                  "res_model": model._name,
                }
              </field>
            </record>
        -->

        <!-- Top menu item -->

        <menuitem name="Game" id="game.menu_root"/>

        <!-- menu categories -->

        <menuitem name="Game" id="game.menu_1" parent="game.menu_root"/>

        <!-- actions -->

        <menuitem name="Players" id="game.menu_1_player" parent="game.menu_1"
                  action="game.player_action_window"/>
        <menuitem name="Clans" id="game.menu_1_clan" parent="game.menu_1"
                  action="game.clan_action_window"/>
        <menuitem name="Characters" id="game.menu_1_character" parent="game.menu_1"
                  action="game.character_action_window"/>
        <menuitem name="Regions" id="game.menu_1_region" parent="game.menu_1"
                  action="game.region_action_window"/>

    </data>
</odoo>